Screen:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg_gradient.jpg'

    MDCard:
        size_hint: None, None
        size: "225dp", "400dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: login_label
            text: "LOGIN"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: username_box
            mode: "round"
            hint_text: "Username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password_box
            mode: "round"
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRectangleFlatButton:
            id: login_button
            text: "Log in"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()

        Widget:
            size_hint_y: None
            height: 60


    